<% content_for :title, "Tags" %>
<% content_for :head do %>
  <% if @author&.site_meta_description.present? %>
    <meta name="description" content="<%= @author.site_meta_description %>">
  <% end %>
<% end %>
<div class="max-w-3xl mx-auto">
  <div class="flex justify-between items-center mb-10">
    <h1 class="text-3xl font-bold">Tags</h1>
  </div>
  <div id="tags" class="space-y-8">
    <% if @tags.any? %>
      <nav aria-label="Available tags" role="navigation">
        <ul class="tags-list space-y-2" role="list">
          <% @tags.each do |tag| %>
            <li class="mb-2">
              <%= link_to tag_path(tag.slug), class: "link link-primary no-underline", aria: { label: "View all posts tagged with #{tag.name}" } do %>
                <span class="underline"><%= tag.name %></span>
                <span class="badge badge-ghost ml-2"><%= tag.posts_count %></span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    <% else %>
      <div class="text-center py-8">
        <p class="text-xl text-base-content/60">No tags yet!</p>
      </div>
    <% end %>
  </div>
</div>
