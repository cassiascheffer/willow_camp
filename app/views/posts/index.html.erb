<% content_for :title, "#{blog_title_for(@author)} | Posts" %>
<% content_for :head do %>
  <% if @author&.site_meta_description.present? %>
    <meta name="description" content="<%= @author.site_meta_description %>">
  <% end %>
<% end %>
<% if notice.present? %>
  <div role="alert" class="notice" id="notice"><%= notice %></div>
<% end %>
<% if alert.present? %>
  <div role="alert" class="alert" id="alert"><%= alert %></div>
<% end %>
<div class="flex justify-between items-center mb-10">
  <h1>Posts</h1>
</div>
<div id="posts" class="space-y-8">
  <% if @posts.any? %>
    <div class="posts-list space-y-2">
      <% @posts.each do |post| %>
        <div class="border-b border-[var(--light-border)] dark:border-[var(--dark-border)] last:border-0">
          <%= link_to post_path(post.slug), class: "block px-3 py-4 hover:bg-[var(--light-card-hover)] dark:hover:bg-[var(--dark-card-hover)] rounded transition duration-200" do %>
            <h3 class="text-lg font-medium flex flex-col sm:flex-row">
              <span class="text-date text-xs sm:text-base sm:after:ml-2 min-w-[4rem] shrink-0 md:after:content-['â€”'] md:after:ml-2"><%= post.published_at.strftime("%b %d, %Y") %></span>
              <span class="pl-0 sm:pl-3"><%= post.title %></span>
            </h3>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p class="text-xl">No posts yet!</p>
    </div>
  <% end %>
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
