<% content_for :title, "Blog Posts" %>

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-10">
    <h1 class="font-bold text-4xl text-gray-800">Blog Posts</h1>
    <%= link_to "New post", new_post_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium transition" %>
  </div>

  <div id="posts" class="space-y-8">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <article class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition">
          <div class="mb-4">
            <%= render post %>
          </div>
          <div class="flex flex-wrap items-center gap-4 pt-4 border-t border-gray-100 mt-4">
            <%= link_to "Read more", post, class: "text-blue-600 hover:text-blue-800 font-medium" %>
            <div class="flex-grow"></div>
            <%= link_to "Edit", edit_post_path(post), class: "text-gray-500 hover:text-gray-700" %>
            <%= button_to "Delete", post, method: :delete, class: "text-gray-500 hover:text-red-600", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </article>
      <% end %>
    <% else %>
      <div class="text-center py-16 bg-white rounded-lg shadow-sm">
        <p class="text-xl text-gray-500">No posts yet</p>
        <p class="mt-2 text-gray-400">Create your first blog post to get started</p>
      </div>
    <% end %>
  </div>
</div>
