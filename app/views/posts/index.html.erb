<% content_for :title, "#{blog_title_for(@author)} | Posts" %>
<% content_for :head do %>
  <% if @author&.site_meta_description.present? %>
    <meta name="description" content="<%= @author.site_meta_description %>">
  <% end %>
<% end %>
<% if notice.present? %>
  <div role="alert" class="notice" id="notice"><%= notice %></div>
<% end %>
<% if alert.present? %>
  <div role="alert" class="alert" id="alert"><%= alert %></div>
<% end %>
<div class="flex justify-between items-center mb-10">
  <h1>Posts</h1>
</div>
<div id="posts" class="space-y-8">
  <% if @posts.any? %>
    <div class="posts-list space-y-2">
      <%= render partial: 'posts/post_row', collection: @posts %>
    </div>
  <% else %>
    <div class="empty-state">
      <p class="text-xl">No posts yet!</p>
    </div>
  <% end %>
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
