<% content_for :title, "#{blog_title_for(@author)} | Posts" %>
<% content_for :head do %>
  <% if @author&.site_meta_description.present? %>
    <meta name="description" content="<%= @author.site_meta_description %>">
  <% end %>
<% end %>
<% if notice.present? %>
  <div role="alert" class="alert alert-success" id="notice"><%= notice %></div>
<% end %>
<% if alert.present? %>
  <div role="alert" class="alert alert-error" id="alert"><%= alert %></div>
<% end %>
<div class="flex justify-between items-center mb-10">
  <h1 class="text-3xl font-bold">Posts</h1>
</div>
<div id="posts" class="space-y-8">
  <% if @posts.any? %>
    <div class="posts-list space-y-2">
      <%= render partial: 'posts/post_row', collection: @posts %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <p class="text-xl text-base-content/60">No posts yet!</p>
    </div>
  <% end %>
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
