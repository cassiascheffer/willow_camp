<% content_for :title, "Showing post" %>

<div class="max-w-3xl mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <article class="prose lg:prose-xl mb-8">
    <h1 class="font-bold text-4xl mb-6"><%= @post.title %></h1>
    <div class="text-sm mb-4">
      <p>Published on <%= @post.published_at.strftime("%B %d, %Y") %></p>
    </div>
    
    <div class="pb-4 mb-6">
      <%= render @post %>
    </div>
  </article>

  <div class="flex flex-wrap items-center gap-2 mt-8 pt-4 border-t border-gray-200 dark:border-gray-700">
    <%= link_to "Back to posts", posts_path, class: "text-xs rounded px-2.5 py-1 bg-slate-50 text-slate-600 hover:bg-slate-100 dark:bg-slate-800/30 dark:text-slate-300 dark:hover:bg-slate-700/40 font-medium transition-colors" %>
  </div>
</div>
