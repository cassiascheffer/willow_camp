<div class="w-full max-w-prose mx-auto px-4">
  <div class="bg-[var(--light-card)] dark:bg-[var(--dark-card)] border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md p-5 transition-all duration-200 mb-8">
    <h1 class="font-bold text-2xl mb-6">Account Settings</h1>
    <%= render "user_form", user: @user %>
  </div>

  <div class="bg-[var(--light-card)] dark:bg-[var(--dark-card)] border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md p-5 transition-all duration-200">
    <h1 class="font-bold text-2xl mb-6">API Tokens</h1>
    <div class="mb-8">
      <h2 class="text-lg font-medium mb-4">Create New Token</h2>
      <%= render "token_form", token: @token %>
    </div>
    <div>
      <h2 class="text-lg font-medium mb-4">Your Tokens</h2>
      <%= render "token_list", tokens: @tokens %>
    </div>
  </div>
</div>
