<div id="tokens" class="wc-table-container overflow-x-auto">
  <% if tokens.any? %>
    <div class="wc-table-wrapper">
      <table class="wc-table w-full table-fixed">
        <thead class="wc-table-header">
          <tr>
            <th scope="col" class="wc-table-header-cell w-1/5">Name</th>
            <th scope="col" class="wc-table-header-cell w-2/5">Token</th>
            <th scope="col" class="wc-table-header-cell w-1/6">Created</th>
            <th scope="col" class="wc-table-header-cell w-1/6">Expires</th>
            <th scope="col" class="wc-table-header-cell w-1/10 text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="wc-table-body">
          <% tokens.each do |token| %>
            <%= render "dashboard/settings/token", token: token %>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="wc-table-empty">No tokens created yet.</p>
  <% end %>
</div>
