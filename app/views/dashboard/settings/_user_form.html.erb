<%= form_with(model: user, url: dashboard_user_path(user), method: :patch, id: dom_id(user), class: "contents", data: { turbo: true, controller: "form-status" }) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="willow-alert">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul class="list-disc list-inside">
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: "text-muted" %>
    <%= form.text_field :name, required: false, class: "willow-input" %>
  </div>

  <div class="my-5">
    <%= form.label :email, class: "text-muted" %>
    <%= form.email_field :email_address, required: true, autocomplete: "username", class: "willow-input" %>
  </div>

  <div class="my-5">
    <%= form.label :password, class: "text-muted" %>
    <%= form.password_field :password, required: false, autocomplete: "new-password", maxlength: 72, class: "willow-input" %>
  </div>

  <div class="my-5">
    <%= form.label :password_confirmation, "Password confirmation", class: "text-muted" %>
    <%= form.password_field :password_confirmation, required: false, autocomplete: "new-password", maxlength: 72, class: "willow-input" %>
  </div>

  <div class="my-5">
    <%= form.label :blog_name, class: "text-muted" %>
    <%= form.text_field :blog_title, required: false, class: "willow-input" %>
  </div>

  <div class="my-5">
    <%= form.label :subdomain, class: "text-muted" %>
    <%= form.text_field :subdomain, required: true, class: "willow-input" %>
  </div>

  <div class="my-5">
    <%= form.label :theme, class: "text-muted" %>
    <%= form.text_field :theme, required: false, class: "willow-input" %>
  </div>

  <div class="my-5">
    <div class="flex items-center">
      <%= form.submit "Update account", class: "willow-button" %>
      <% if flash[:form_status] %>
        <div class="ml-4">
          <%= render "shared/form_status", status: flash[:form_status][:type], message: flash[:form_status][:message] %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>