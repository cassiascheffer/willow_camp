<tr id="tag_row_<%= tag.id %>" data-controller="inline-edit tag-delete" data-inline-edit-url-value="<%= dashboard_tag_path(blog_subdomain: @blog.subdomain, id: tag.id) %>" data-tag-delete-url-value="<%= dashboard_tag_path(blog_subdomain: @blog.subdomain, id: tag.id) %>">
  <td>
    <div data-inline-edit-target="display">
      <button type="button" 
              class="text-left hover:bg-base-200 rounded px-1 py-0.5 -mx-1 -my-0.5 cursor-pointer transition-colors"
              data-action="click->inline-edit#edit"
        title="Click to edit tag name">
        <%= tag.name %>
      </button>
    </div>
    <%= render "tag_form", tag: tag %>
  </td>
  <td><%= tag.published_count %></td>
  <td><%= tag.draft_count %></td>
  <td><%= tag.taggings_count %></td>
  <td>
    <div class="flex gap-2">
      <button type="button"
              class="btn btn-circle btn-outline btn-sm"
              data-action="click->inline-edit#edit"
        title="Edit tag"
        aria-label="Edit tag <%= tag.name %>">
        <%= heroicon "pencil", options: { class: "w-4 h-4" } %>
      </button>
      <button type="button" 
              class="btn btn-circle btn-outline btn-error btn-sm"
              data-action="click->tag-delete#confirmDelete"
        title="Delete tag"
        aria-label="Delete tag <%= tag.name %>">
        <%= heroicon "trash", options: { class: "w-4 h-4" } %>
      </button>
    </div>
  </td>
</tr>
