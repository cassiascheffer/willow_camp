<div class="py-8 lg:px-8">
  <header aria-label="Dashboard Header" class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">Dashboard</h1>
    <a href="<%= new_dashboard_post_path %>" class="">New Post</a>
  </header>
  <div class="w-full">
    <% if @posts.present? %>
      <div class="bg-[var(--light-card)] dark:bg-[var(--dark-card)] border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md p-5 transition-all duration-200 mb-6">
        <table class="w-full border-collapse" aria-label="Posts Table">
          <thead>
            <tr class="border-b border-[var(--light-border)] dark:border-[var(--dark-border)]">
              <th class="text-left py-2">Title</th>
              <th class="text-left py-2">Status</th>
              <th class="text-left py-2">Published</th>
              <th class="text-left py-2">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr onclick="window.location=<%= edit_dashboard_post_path(post).to_json %>;" class="border-b border-[var(--light-border)] dark:border-[var(--dark-border)] hover:bg-[var(--light-card-hover)] dark:hover:bg-[var(--dark-card-hover)] transition-colors duration-200 cursor-pointer">
                <td class="py-2"><%= post.title %></td>
                <td class="py-2"><%= post.published? ? 'Published' : 'Draft' %></td>
                <td class="py-2"><%= post.published_at&.strftime('%B %d, %Y') || 'Not published' %></td>
                <td class="py-2">
                  <% if post.published? %>
                    <%= link_to post_url(post.slug, subdomain: @user.subdomain), class: "text-[var(--light-accent)] dark:text-[var(--dark-accent)] hover:text-[var(--light-accent-hover)] dark:hover:text-[var(--dark-accent-hover)] inline-flex items-center", target: "_blank", onclick: "event.stopPropagation();" do %>
                      View
                      <svg class="h-5 w-5 ml-1" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M10.0002 5H8.2002C7.08009 5 6.51962 5 6.0918 5.21799C5.71547 5.40973 5.40973 5.71547 5.21799 6.0918C5 6.51962 5 7.08009 5 8.2002V15.8002C5 16.9203 5 17.4801 5.21799 17.9079C5.40973 18.2842 5.71547 18.5905 6.0918 18.7822C6.5192 19 7.07899 19 8.19691 19H15.8031C16.921 19 17.48 19 17.9074 18.7822C18.2837 18.5905 18.5905 18.2839 18.7822 17.9076C19 17.4802 19 16.921 19 15.8031V14M20 9V4M20 4H15M20 4L13 11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                      </svg>
                    <% end %>
                  <% else %>
                    <span class="text-[var(--light-muted)] dark:text-[var(--dark-muted)]">View</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <section class="empty-state" aria-label="No Posts">
        <p class="text-xl">No posts yet</p>
        <p class="mt-2">Create your first blog post to get started</p>
      </section>
    <% end %>
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
</div>
