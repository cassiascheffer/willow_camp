<div class="container-narrow">
  <% if alert = flash[:alert] %>
    <p class="alert" id="alert"><%= alert %></p>
  <% end %>

  <% if notice = flash[:notice] %>
    <p class="notice" id="notice"><%= notice %></p>
  <% end %>

  <div class="willow-card">
    <h1 class="font-bold text-2xl mb-6">Edit Profile</h1>

    <%= form_with(model: @user, url: dashboard_user_path, local: true, class: "contents") do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="willow-alert">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="my-5">
        <%= form.label :name, class: "text-muted" %>
        <%= form.text_field :name, required: true, class: "willow-input" %>
      </div>

      <div class="my-5">
        <%= form.label :email, class: "text-muted" %>
        <%= form.email_field :email_address, required: true, autocomplete: "username", class: "willow-input" %>
      </div>

      <div class="my-5">
        <%= form.label :password, class: "text-muted" %>
        <%= form.password_field :password, required: false, autocomplete: "new-password", maxlength: 72, class: "willow-input" %>
      </div>

      <div class="my-5">
        <%= form.label :password_confirmation, "Password confirmation", class: "text-muted" %>
        <%= form.password_field :password_confirmation, required: false, autocomplete: "new-password", maxlength: 72, class: "willow-input" %>
      </div>

      <div class="my-5">
        <%= form.label :blog_title, class: "text-muted" %>
        <%= form.text_field :blog_title, required: true, class: "willow-input" %>
      </div>

      <div class="my-5">
        <%= form.label :subdomain, class: "text-muted" %>
        <%= form.text_field :subdomain, required: true, class: "willow-input" %>
      </div>

      <div class="my-5">
        <%= form.submit "Update account", class: "willow-button" %>
      </div>
    <% end %>
  </div>
</div>