<% content_for :title, "Editing post" %>

<div class="w-2/3 max-w-[800px] mx-auto">
  <h1 class="font-bold text-4xl">Editing post</h1>

  <%= render "form", post: @post %>

  <%= link_to "Delete", dashboard_post_path(@post), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-600 inline-block font-medium" %>
  <% if @post.published? %>
    <%= link_to "View this post", post_url(@post.slug, subdomain: @post.author.subdomain), class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-600 inline-block font-medium" %>
  <% end %>
  <%= link_to "Back to posts", dashboard_posts_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-100 hover:bg-gray-50 dark:hover:bg-gray-600 inline-block font-medium" %>
</div>
