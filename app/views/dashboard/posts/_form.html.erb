<%= form_with(model: post, url: post.new_record? ? dashboard_posts_path : dashboard_post_path(post), class: "contents", id: post.new_record? ? "new_post_form" : "edit_post_form", data: { turbo: true, controller: "form-status" }) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 dark:bg-red-900/10 text-[var(--light-error)] dark:text-[var(--dark-error)] border-l-4 border-l-[var(--light-error)] dark:border-l-[var(--dark-error)] px-4 py-3 mb-4 rounded-r font-medium mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul class="list-disc ml-6">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["w-full px-3 py-2 border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md bg-[var(--light-bg)] dark:bg-[var(--dark-bg)] text-[var(--light-text)] dark:text-[var(--dark-text)] focus:outline-none focus:ring-2 focus:ring-[var(--light-accent)] dark:focus:ring-[var(--dark-accent)] focus:ring-offset-1 mt-2", {"focus:ring-[#006A93] dark:focus:ring-[#7AA2F7]": post.errors[:title].none?, "border-[#EF4444] dark:border-[#F87171] focus:ring-[#EF4444] dark:focus:ring-[#F87171]": post.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :slug%>
    <%= form.text_field :slug, class: ["w-full px-3 py-2 border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md bg-[var(--light-bg)] dark:bg-[var(--dark-bg)] text-[var(--light-text)] dark:text-[var(--dark-text)] focus:outline-none focus:ring-2 focus:ring-[var(--light-accent)] dark:focus:ring-[var(--dark-accent)] focus:ring-offset-1 mt-2", {"focus:ring-[#006A93] dark:focus:ring-[#7AA2F7]": post.errors[:slug].none?, "border-[#EF4444] dark:border-[#F87171] focus:ring-[#EF4444] dark:focus:ring-[#F87171]": post.errors[:slug].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :tag_list%>
    <%= form.text_field :tag_list, value: post.tag_list.join(', '), class: ["w-full px-3 py-2 border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md bg-[var(--light-bg)] dark:bg-[var(--dark-bg)] text-[var(--light-text)] dark:text-[var(--dark-text)] focus:outline-none focus:ring-2 focus:ring-[var(--light-accent)] dark:focus:ring-[var(--dark-accent)] focus:ring-offset-1 mt-2", {"focus:ring-[#006A93] dark:focus:ring-[#7AA2F7]": post.errors[:tag_list].none?, "border-[#EF4444] dark:border-[#F87171] focus:ring-[#EF4444] dark:focus:ring-[#F87171]": post.errors[:tag_list].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :meta_description, "Meta Description", class: "text-muted" %>
    <div class="text-xs text-gray-500 mb-2">Used for social shares</div>
    <%= form.text_area :meta_description, required: false, class: "w-full px-3 py-2 border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md bg-[var(--light-bg)] dark:bg-[var(--dark-bg)] text-[var(--light-text)] dark:text-[var(--dark-text)] focus:outline-none focus:ring-2 focus:ring-[var(--light-accent)] dark:focus:ring-[var(--dark-accent)] focus:ring-offset-1 h-24", maxlength: 255 %>
  </div>

  <div class="my-5">
    <%= form.label :body %>
    <%= form.text_area :body_markdown, rows: 4, class: ["w-full px-3 py-2 border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md bg-[var(--light-bg)] dark:bg-[var(--dark-bg)] text-[var(--light-text)] dark:text-[var(--dark-text)] focus:outline-none focus:ring-2 focus:ring-[var(--light-accent)] dark:focus:ring-[var(--dark-accent)] focus:ring-offset-1 mt-2 h-[400px]", {"focus:ring-[#006A93] dark:focus:ring-[#7AA2F7]": post.errors[:body_markdown].none?, "border-[#EF4444] dark:border-[#F87171] focus:ring-[#EF4444] dark:focus:ring-[#F87171]": post.errors[:body_markdown].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :published %>
    <%= form.check_box :published, class: ["order-first h-5 w-5 rounded border-[#E5E7EB] dark:border-[#3A3D4D] text-[#006A93] dark:text-[#7AA2F7]", {"focus:ring-[#006A93] dark:focus:ring-[#7AA2F7]": post.errors[:published].none?, "border-[#EF4444] dark:border-[#F87171] focus:ring-[#EF4444] dark:focus:ring-[#F87171]": post.errors[:published].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :published_at %>
    <%= form.datetime_field :published_at, class: ["w-full px-3 py-2 border border-[var(--light-border)] dark:border-[var(--dark-border)] rounded-md bg-[var(--light-bg)] dark:bg-[var(--dark-bg)] text-[var(--light-text)] dark:text-[var(--dark-text)] focus:outline-none focus:ring-2 focus:ring-[var(--light-accent)] dark:focus:ring-[var(--dark-accent)] focus:ring-offset-1 mt-2", {"focus:ring-[#006A93] dark:focus:ring-[#7AA2F7]": post.errors[:published_at].none?, "border-[#EF4444] dark:border-[#F87171] focus:ring-[#EF4444] dark:focus:ring-[#F87171]": post.errors[:published_at].any?}] %>
  </div>

  <div class="my-5">
    <div class="flex items-center">
      <%= form.submit class: "inline-block px-4 py-2 font-medium rounded-md transition-all duration-200 bg-[var(--light-accent)] hover:bg-[var(--light-accent-hover)] dark:bg-[var(--dark-accent)] dark:hover:bg-[var(--dark-accent-hover)] text-white" %>
      <% if flash[:form_status] %>
        <div class="ml-4">
          <%= render "shared/form_status", status: flash[:form_status][:type], message: flash[:form_status][:message] %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
