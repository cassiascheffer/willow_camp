<%= turbo_frame_tag "password_form" do %>
  <%= form_with(model: user, url: dashboard_user_path(user), method: :patch, id: "password_#{dom_id(user)}", class: "form-control", data: { turbo_frame: "password_form" }) do |form| %>
    <%= render "shared/form_errors", user: user %>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 mb-4">
      <div class="form-control w-full">
        <%= form.label :password, "New Password", class: "label" %>
        <%= form.password_field :password, required: false, autocomplete: "new-password", maxlength: 72, class: "input input-bordered w-full" %>
      </div>
      <div class="form-control w-full">
        <%= form.label :password_confirmation, "Confirm New Password", class: "label" %>
        <%= form.password_field :password_confirmation, required: false, autocomplete: "new-password", maxlength: 72, class: "input input-bordered w-full" %>
      </div>
    </div>
    
    <div class="form-control w-full mt-6">
      <%= form.submit "Update Password", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
<% end %>