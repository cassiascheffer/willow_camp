<% if type == "notice" %>
  <div data-controller="flash" class="flash flash-notice p-4 bg-green-100 border-l-4 border-green-500 text-green-700 mb-2 flex justify-between items-center">
    <div><%= message %></div>
    <button class="flash-close ml-4" data-action="click->flash#dismiss">&times;</button>
  </div>
<% elsif type == "alert" %>
  <div data-controller="flash" class="flash flash-alert p-4 bg-red-100 border-l-4 border-red-500 text-red-700 mb-2 flex justify-between items-center">
    <div><%= message %></div>
    <button class="flash-close ml-4" data-action="click->flash#dismiss">&times;</button>
  </div>
<% end %>
