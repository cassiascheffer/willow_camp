<div data-controller="flash" class="alert <%= type == 'notice' ? 'alert-success' : 'alert-error' %> rounded-full px-6 py-2 max-w-md shadow-lg mb-2 fixed top-4 left-1/2 transform -translate-x-1/2 z-50" role="alert" aria-live="<%= type == 'notice' ? 'polite' : 'assertive' %>">
  <div class="flex items-center">
    <% if type == 'notice' %>
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-4 w-4" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
    <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-4 w-4" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
    <% end %>
    <span class="ml-2 text-sm"><%= message %></span>
  </div>
  <button class="btn btn-xs btn-circle btn-ghost ml-2 flash-close" data-action="click->flash#dismiss" aria-label="Dismiss <%= type %>">&times;</button>
</div>
