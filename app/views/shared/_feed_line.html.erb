<div class="flex items-center justify-between gap-4" data-controller="clipboard">
  <div class="flex-1">
    <dt class="font-bold mr-2 inline"><%= feed_name %>:</dt>
    <dd class="font-mono text-sm text-base-content/70 inline" id="<%= feed_name.downcase.gsub(' ', '-') %>-url"><%= feed_url %></dd>
  </div>
  <button class="btn btn-ghost btn-sm btn-square"
          data-action="click->clipboard#copy"
    aria-label="Copy <%= feed_name %> URL"
    aria-describedby="<%= feed_name.downcase.gsub(' ', '-') %>-url">
    <span data-clipboard-target="source" class="hidden"><%= feed_url %></span>
    <%= render 'shared/copy_icon' %>
    <span data-clipboard-target="success" class="hidden ml-2" aria-label="Copied successfully">âœ“</span>
  </button>
</div>
