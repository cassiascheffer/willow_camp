<div class="flex justify-center items-center min-h-screen py-8">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center mb-6">Log in</h2>
      <%= form_for(resource, as: resource_name, url: new_user_session_path) do |f| %>
        <div class="form-control w-full">
          <%= f.label :email, class: "label" do %>
            <span class="label-text">Email</span>
          <% end %>
          <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              class: "input input-bordered w-full" %>
        </div>
        <div class="form-control w-full mt-4">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">Password</span>
          <% end %>
          <%= f.password_field :password,
              autocomplete: "current-password",
              class: "input input-bordered w-full" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-control mt-4">
            <label class="label cursor-pointer justify-start">
              <%= f.check_box :remember_me, class: "checkbox checkbox-primary mr-3" %>
              <span class="label-text">Remember me</span>
            </label>
          </div>
        <% end %>
        <div class="form-control mt-6">
          <%= f.submit "Log in", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
