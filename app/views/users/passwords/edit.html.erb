<div class="flex justify-center items-center min-h-screen py-8">
  <div class="card w-full max-w-md bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold text-center mb-6">Change your password</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-control w-full">
          <%= f.label :password, class: "label" do %>
            <span class="label-text">
              New password
              <% if @minimum_password_length %>
                <span class="text-sm text-base-content/70">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
            </span>
          <% end %>
          <%= f.password_field :password, 
              autofocus: true, 
              autocomplete: "new-password",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control w-full">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text">Confirm new password</span>
          <% end %>
          <%= f.password_field :password_confirmation, 
              autocomplete: "new-password",
              class: "input input-bordered w-full" %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Change my password", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>